<UserControl x:Class="PointOfSale.CustomizationScreens.CowboyCoffeeCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    
    <StackPanel>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Foreground="Goldenrod" TextDecorations="Underline">Cowboy Coffee Customization!</TextBlock>
        <StackPanel Orientation="Vertical">

            <CheckBox IsChecked="{Binding Path=Cheese}">
                <TextBlock Text="Cheese"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=SourCream}">
                <TextBlock Text="Sour Cream"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=GreenOnions}">
                <TextBlock Text="Green Onions"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=TortillaStrips}">
                <TextBlock Text="Tortilla Strips"/>
            </CheckBox>

        </StackPanel>
    </StackPanel>
</UserControl>
