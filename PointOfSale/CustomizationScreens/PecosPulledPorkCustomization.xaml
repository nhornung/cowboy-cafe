<UserControl x:Class="PointOfSale.CustomizationScreens.PecosPulledPorkCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <StackPanel>
        <TextBlock FontSize="28" HorizontalAlignment="Center" Foreground="Goldenrod" TextDecorations="Underline">Pecos Pulled Pork Customization!</TextBlock>
        <StackPanel Orientation="Vertical">

            <CheckBox IsChecked="{Binding Path=Bread}">
                <TextBlock Text="Bread"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=Pickle}">
                <TextBlock Text="Pickles"/>
            </CheckBox>

        </StackPanel>
    </StackPanel>
</UserControl>
