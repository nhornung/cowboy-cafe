<UserControl x:Class="PointOfSale.CustomizationScreens.TrailBurgerCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">

    <StackPanel>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Foreground="Goldenrod" TextDecorations="Underline">TrailBurger Customization!</TextBlock>
        <StackPanel Orientation="Vertical">

            <CheckBox IsChecked="{Binding Path=Bun}">
                <TextBlock Text="Bun"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=Ketchup}">
                <TextBlock Text="Ketchup"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=Mustard}">
                <TextBlock Text="Mustard"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=Cheese}">
                <TextBlock Text="Cheese"/>
            </CheckBox>

            <CheckBox IsChecked="{Binding Path=Pickle}">
                <TextBlock Text="Pickles"/>
            </CheckBox>

        </StackPanel>
    </StackPanel>
</UserControl>
